{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "outDir": "../../out-tsc/spec",
        "types": [
            "jasmine",
            "node"
        ],
        "paths": {
            "@nova-ui/dashboards": ["./src/public-api.ts"]
        }
    },
    "files": [
        "./src/test.ts",
        "./src/polyfills.ts"
    ],
    "include": [
        "../spec/virtual-dashboards/**/*.spec.ts",
        "**/*.spec.ts",
        "**/*.d.ts"
    ],
    "exclude": [
        "**/schematics/**/files/**"
    ]
}
