{
  "extends": "../../.eslintrc.json",
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "settings": {
        "import/parsers": {
          "@typescript-eslint/parser": [".ts", ".html"]
        },
        "import/resolver": {
          "typescript": {
            "project": [
              "tsconfig.json"
            ]
          },
          "node": {
            "extensions": [".js", ".ts"],
            "paths": ["./examples/src/components"]
          }
        }
      }
    }
  ]
}
