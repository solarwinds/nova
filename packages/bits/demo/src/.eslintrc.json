{
  "extends": "../../.eslintrc.json",
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
            "tsconfig.json"
          ],
        "createDefaultProgram": true
      },
      "rules": {
        "max-len": "off"
      },
      "settings": {
        "import/parsers": {
          "@typescript-eslint/parser": [".ts", ".html"]
        },
        "import/resolver": {
          "typescript": {
            "project": [
              "tsconfig.json"
            ]
          }
        }
      }
    }
  ]
}
