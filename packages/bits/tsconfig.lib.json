{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/aot",
        "declaration": false,
        "target": "es6",
        "module": "es6",
        "baseUrl": ".",
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "files": [
        "./src/public_api.ts"
    ],
    "exclude": [],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true,
        "enableResourceInlining": true,
        "strictTemplates": true
    }
}
